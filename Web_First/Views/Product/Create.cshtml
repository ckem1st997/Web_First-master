                                                                                <line x1="27" y1="13" x2="13" y2="27" stroke-linecap="round" stroke-linejoin="round" />
                                                                                <line x1="27" y1="27" x2="13" y2="13" stroke-linecap="round" stroke-linejoin="round" />
                                                                            </g>
                                                                        </svg>
                                                                        <svg class="next-icon next-icon--40" preserveAspectRatio="xMinYMin">
                                                                            <circle class="next-spinner__ring" cx="50%" cy="50%" r="45%" role="presentation" />
                                                                        </svg>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="product-photo-hover-overlay drag"
                                                             data-bind-show="!isUploading()"
