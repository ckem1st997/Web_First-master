                                        <td data-bind-show="inventoryOptions.inventoryManagement"><input type="text" class="select-all-on-focus next-input" name="product[variants][{{= variant.index}}][inventoryQuantity]" data-bind="variants[{{= JSON.stringify(variant.index) }}].inventoryQuantity"></td>
                                    </tr>
                                </script>


